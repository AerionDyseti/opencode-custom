{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-openai-codex-auth"],
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp", "--api-key", "ctx7sk-359f4816-8fb2-4459-806c-ca8fced53ecc"],
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant-no-memory",
        "--project",
        "$(pwd)"
      ]
    },
    "memory": {
      "type": "local",
      "command": ["uv", "--directory", "/home/aerion/dev/mcp-memory-service", "run", "memory", "server"],
      "environment": {
        "MCP_MEMORY_STORAGE_BACKEND": "sqlite_vec"
      }
    }
  }
}
